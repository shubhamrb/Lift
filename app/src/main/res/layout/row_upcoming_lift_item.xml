<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:background="@drawable/current_location_et_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_lift_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:fontFamily="@font/gotham_light"
                android:padding="@dimen/dp_5"
                android:text="fgdgd"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:fontFamily="@font/gotham_light"
                android:padding="@dimen/dp_5"
                android:text="Cancel"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_more" />

                <View
                    android:id="@+id/view"
                    android:layout_width="@dimen/_5sdp"
                    android:layout_height="@dimen/_5sdp"
                    android:layout_alignBottom="@id/imMore"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRideType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="0.5"
                android:fontFamily="@font/gotham_light"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRideId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewSeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="0.5"
                android:fontFamily="@font/gotham_light"
                android:gravity="right"
                android:padding="@dimen/dp_5"
                android:text="1 Seats"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="Points : "
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRateparkm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:fontFamily="@font/gotham_light"
                android:gravity="center_vertical|right"
                android:padding="@dimen/dp_5"
                android:text="Rate per km :"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="@string/time"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDistancekm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@+id/textViewDateTime"
                android:fontFamily="@font/gotham_light"
                android:gravity="center_vertical|right"
                android:padding="@dimen/dp_5"
                android:text="Distance : km"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/matchFoundBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/find_matches"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/requestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/request"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/partnerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/partnet_details"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_share_lift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:background="@drawable/rounded_bg_green"
                android:elevation="@dimen/dp_5"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btn_same_rute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:background="@drawable/rounded_bg_green"
                android:elevation="@dimen/dp_5"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_10"
                android:text="Same Route"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/btn_start_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_bg_green">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btn_start_ride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/dp_5"
                    android:ellipsize="end"
                    android:fontFamily="@font/gotham_medium"
                    android:padding="@dimen/dp_10"
                    android:text="@string/start_ride"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_navigation"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:rotation="90"
                    android:visibility="gone"
                    android:src="@drawable/navigation" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
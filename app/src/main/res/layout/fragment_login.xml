<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/login_sub_bg" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#9032BF35">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center"
                        android:padding="@dimen/dp_5"
                        android:text="Lift PlZz"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_30"
                        android:visibility="visible" />
                </RelativeLayout>

            </FrameLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_login"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:fontFamily="@font/gotham_bold"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:text="Enter Phone \nNumber"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_26"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/layoutLine1"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_5"
                    android:layout_below="@id/textViewMain"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_5"
                    android:src="@drawable/rounded_bg_line"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/layoutEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutLine1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/login_et_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10">


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/editTextMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start|center_vertical"
                        android:imeOptions="actionDone"
                        android:includeFontPadding="false"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/dp_5"
                        android:singleLine="true"
                        android:text=""
                        android:letterSpacing="0.4"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrey"
                        android:textSize="28sp" />


                </LinearLayout>


                <ImageView
                    android:id="@+id/imageViewNext"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_below="@id/layoutEditText"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_100"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_next"
                    android:visibility="visible" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:fontFamily="@font/gotham_medium"
            android:padding="@dimen/dp_15"
            android:text="Sign Up"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="1"
            android:padding="@dimen/dp_5"
            android:text="Forgot Password?"
            android:textColor="@color/colorGrey"
            android:textColorHint="@color/colorPrimary"

            android:textSize="@dimen/sp_18"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbarNew"
        layout="@layout/toolbar_back_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarNew"
        android:padding="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/rounded_bg_et_profile"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextBankName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="start"
                    android:hint="Bank name"
                    android:padding="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/rounded_bg_et_profile"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="start"
                    android:hint="Account number"
                    android:inputType="number"
                    android:padding="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/rounded_bg_et_profile"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextIfsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="start"
                    android:hint="IFSC"
                    android:padding="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/rounded_bg_et_profile"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="start"
                    android:hint="Account holder name"
                    android:padding="@dimen/dp_5"
                    android:singleLine="true"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/upload_pan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toStartOf="@+id/verified_pan"
                    android:background="@null"
                    android:drawableLeft="@android:drawable/ic_menu_upload"
                    android:drawablePadding="@dimen/dp_5"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center|start"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:text=" Upload your PAN"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/verified_pan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_verified_24"
                    app:tint="@color/divider" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/upload_cheque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toStartOf="@+id/verified_cheque"
                    android:background="@null"
                    android:drawableLeft="@android:drawable/ic_menu_upload"
                    android:drawablePadding="@dimen/dp_5"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center|start"
                    android:padding="@dimen/dp_8"
                    android:singleLine="true"
                    android:text=" Upload Cancelled Cheque"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/verified_cheque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_verified_24"
                    app:tint="@color/divider" />
            </RelativeLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/sp_25"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/sp_25"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartRideActivity">

    <include
        android:id="@+id/title"
        layout="@layout/toolbar_back_title_layout" />


    <fragment

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map_matching"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rel_bottom"
        android:layout_below="@+id/title" />

    <RelativeLayout
        android:id="@+id/rel_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_start_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/rounded_bg_green"
            android:ellipsize="end"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/start_ride"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>


</RelativeLayout>
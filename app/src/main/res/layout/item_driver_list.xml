<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:elevation="@dimen/dp_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/relative_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_driver"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:src="@drawable/logo_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_driver"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_driver"
                    android:layout_marginTop="10sp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"

                        android:layout_weight=".6">

                        <ImageView
                            android:layout_width="20sp"
                            android:layout_height="20sp"
                            android:src="@drawable/clock"></ImageView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="3sp"
                            android:drawablePadding="5sp"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center_vertical"
                            android:text="@string/app_name"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dp_13" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight=".2"
                        android:drawableLeft="@drawable/sms"
                        android:drawablePadding="5sp"
                        android:visibility="gone"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center_vertical"
                        android:text="@string/app_name"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dp_13" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:id="@+id/tv_paid_seat"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight=".2"
                        android:drawablePadding="5sp"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center_vertical"
                        android:text="@string/app_name"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dp_13" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10sp"
                    android:background="@color/colorGrey"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_driver">

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_5">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center_vertical"
                        android:text="@string/app_name"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dp_16" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="12sp"
                            android:src="@drawable/ic_star_icon"
                                android:layout_gravity="center_vertical"
                            android:layout_height="12sp"></ImageView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawablePadding="5sp"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dp_13" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawablePadding="5sp"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_rate"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/dp_13" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_rate_per_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/app_name"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dp_13" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight=".4"
                    android:gravity="right|bottom"
                    android:layout_gravity="right"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:orientation="vertical"
                 >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dp_16" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dp_16" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_na"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total point :"
                        android:layout_marginRight="10sp"
                        android:layout_marginTop="5sp"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/dp_12" />


                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_item"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/dp_16" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_send_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="Request"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
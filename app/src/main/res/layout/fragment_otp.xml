<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@id/textLiftPlzz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_5"
        android:fontFamily="@font/gotham_bold"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:text="Lift PlZz"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_30"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLiftPlzz"
        android:layout_gravity="center"
        app:srcCompat="@drawable/image_otp" />


    <RelativeLayout
        android:id="@+id/reltive"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image"
        android:background="@drawable/bg_login"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_5"
            android:fontFamily="@font/gotham_bold"
            android:lineSpacingExtra="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:text="Enter OTP"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_26"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/layoutLine1"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_5"
            android:layout_below="@id/textViewMain"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/rounded_bg_line"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/layoutOTPBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutLine1"
            android:layout_margin="@dimen/dp_15"
            android:orientation="horizontal"
            android:weightSum="6">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextFirstDigits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/top_box_bg"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorDark"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextSecondsDigits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/top_box_bg"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorDark"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextThirdDigits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:layout_weight="1"
                android:background="@drawable/top_box_bg"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorDark"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextFourthDigits"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/top_box_bg"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorDark"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                android:visibility="visible" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"

                android:layout_weight="1"
                android:background="@drawable/top_box_bg"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorDark"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_5"

                android:layout_weight="1"
                android:background="@drawable/top_box_bg"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorDark"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewResendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutOTPBox"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1"
            android:fontFamily="@font/gotham_medium"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="Resend OTP in 00:30"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>
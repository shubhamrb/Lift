<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerMain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_250"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewBackContact"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_3"
                android:src="@drawable/profile_back"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewDeleteContact"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_3"
                android:src="@drawable/report_white"
                android:visibility="gone"
                app:tint="@color/colorAccent" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/home_bg"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_3"
                android:src="@drawable/profile_icon"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:text="Add your multiple photo"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>


            <ScrollView
                android:id="@+id/scrollViewAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutEditTextName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Edit your name "
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutProfessionalStatus"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">


                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gotham_light"
                            android:gravity="start"
                            android:spinnerMode="dropdown"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEditTextOther"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/otherTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Your Profession"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEditTextDesignation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/professionalTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Department"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/txtCMName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Company Name"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEditTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Edit your email address"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:id="@+id/toggle_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/off" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEditTextDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8"
                        android:visibility="visible">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txtDOB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Date of Birth"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                        <ImageView
                            android:id="@+id/toggle_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/off" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:fontFamily="@font/gotham_medium"
                        android:text="Gender"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/genderGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/maleRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/gotham_medium"
                            android:text="Male" />

                        <RadioButton
                            android:id="@+id/femaleRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/gotham_medium"
                            android:text="Female" />

                        <RadioButton
                            android:id="@+id/otherRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:fontFamily="@font/gotham_medium"
                            android:text="Not to Share" />

                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/layoutEditTextMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/editTextMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Edit your phone number"
                            android:inputType="number"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />

                        <ImageView
                            android:id="@+id/toggle_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/off" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEditsosMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editsosnumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Edit your emergency number"
                            android:inputType="number"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEditsocial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8"
                        android:visibility="gone">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextSocial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Social Media Links"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layoutGovtId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_et_profile"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8"
                        android:visibility="gone">


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextGovtId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="start"
                            android:hint="Social Media Links"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_20"
                        android:background="@drawable/bg_profile_text"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_8">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextAboutUser"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="top"
                            android:hint="About yourself"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textAllCaps="false"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/sp_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10sp"
                            android:text="Social Profile Intrested on"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:text="For Whom"
                                android:textSize="14sp" />

                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Male" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FeMale" />


                            </RadioGroup>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:text="Age"
                                android:textSize="14sp" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"
                                android:hint="Minimum"
                                android:textSize="14sp" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:layout_weight="1"
                                android:text="Maximum"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20sp"
                                android:layout_marginTop="10sp"
                                android:layout_weight="1"
                                android:text="Profile Section"
                                android:textSize="14sp" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:numStars="5"
                                android:rating="3.5"
                                android:stepSize="0.5" />
                        </LinearLayout>

                        <Spinner
                            android:id="@+id/mGovtIdSpinner"
                            style="@style/SpinnerwithNoArrow"
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="10sp"
                            android:layout_weight="1"
                            android:background="@drawable/all_spinner_background"
                            android:entries="@array/id_proof"
                            android:spinnerMode="dialog" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buttonUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/sp_25"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/sp_25"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:background="@drawable/rounded_bg_green"
                        android:fontFamily="@font/gotham_medium"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_35"
                        android:paddingRight="@dimen/dp_35"
                        android:text="Update"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_16" />

                </LinearLayout>

            </ScrollView>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewAddImage"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/add_bg_profile"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
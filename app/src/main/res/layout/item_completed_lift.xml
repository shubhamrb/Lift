<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:background="@drawable/current_location_et_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_5"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:fontFamily="@font/gotham_medium"
                android:padding="@dimen/dp_5"
                android:text="@string/lift_type"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_lift_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:fontFamily="@font/gotham_light"
                android:gravity="right"
                android:padding="@dimen/dp_5"
                android:text="dsfsd"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewSeats"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:fontFamily="@font/gotham_light"
                android:gravity="right"
                android:padding="@dimen/dp_5"
                android:text="fgfd"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewRideId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textDistancekm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toRightOf="@+id/textViewRideId"
                android:layout_weight="1"
                android:fontFamily="@font/gotham_light"
                android:gravity="right"
                android:padding="@dimen/dp_5"
                android:text="1 Seats"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                android:visibility="visible" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_2"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_5"
                android:text="@string/time"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_16" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRepet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_weight="1"
                android:background="@drawable/rounded_bg_green"
                android:ellipsize="end"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="Repeat Lift"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingTop="@dimen/_8sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:scaleType="centerInside"
            android:src="@drawable/ic_more" />

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_alignBottom="@id/imMore"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>
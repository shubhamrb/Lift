<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/title"
            layout="@layout/toolbar_home_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgCurrentloc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rr_toolbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_rounded_corner"
        android:contentDescription="Search Location"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_my_location_black_24dp" />


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/scrollView"
        android:layout_below="@+id/rr_toolbar" />

    <ImageView
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/telephone"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/smsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/callButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/sms"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/_35sdp">

        <androidx.core.widget.NestedScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/rounded_bg_white_border"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_1">

                    <LinearLayout
                        android:id="@+id/layoutTakeLift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_3"
                        android:background="@drawable/rounded_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_8">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewTakeLift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingRight="@dimen/dp_20"
                            android:text="@string/find_lift"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutGiveLift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_3"
                        android:background="@drawable/rounded_bg_white"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_8">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewGiveLift"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/gotham_medium"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_20"
                            android:paddingRight="@dimen/dp_20"
                            android:text="@string/offer_lift"
                            android:textAllCaps="false"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/btn_swap"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layoutPickupLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:background="@drawable/rounded_edit_border_grey"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_6">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/editTextPickupLocation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="start"
                                android:hint="Your Current Locations"
                                android:padding="@dimen/dp_5"
                                android:singleLine="true"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack"
                                android:textSize="@dimen/sp_14" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutDropLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dp_5"
                            android:background="@drawable/rounded_edit_border_grey"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_6">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/editTextDropLocation"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="@null"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="start"
                                android:hint="Your Dropoff Locations"
                                android:padding="@dimen/dp_5"
                                android:singleLine="true"
                                android:textColor="@color/colorBlack"
                                android:textColorHint="@color/colorBlack"
                                android:textSize="@dimen/sp_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_swap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/swap_icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutCheckPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_5">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textkm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:fontFamily="@font/gotham_light"
                        android:gravity="start"
                        android:hint=""
                        android:singleLine="true"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:id="@+id/llchkpoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_25"
                            android:layout_gravity="center"
                            android:layout_toLeftOf="@+id/textViewCheckpoints"
                            android:padding="@dimen/dp_5"
                            android:src="@drawable/ic_add"
                            android:tint="@color/colorPrimary"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewCheckpoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_light"
                            android:gravity="start"
                            android:hint="Add Checkpoints"
                            android:paddingTop="@dimen/dp_3"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorBlack"
                            android:textSize="@dimen/sp_14"
                            app:drawableTint="@color/colorPrimary" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layoutSelectDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:src="@drawable/clock"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewSelectDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_light"
                            android:gravity="start"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:text="@string/select_date_time"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSelectSeat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_5"
                            android:src="@drawable/seat_outline"
                            android:visibility="visible"
                            app:tint="@color/colorBlack" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewSelectSeat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@null"
                            android:fontFamily="@font/gotham_light"
                            android:gravity="start"
                            android:padding="@dimen/dp_5"
                            android:text="Select Seat"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutRepeatLift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_marginEnd="@dimen/dp_5"
                            android:src="@drawable/repeat_24"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/spinner_days"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center_horizontal"
                            android:hint="Repeat lift"
                            android:text=""
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layoutSelectReturnDateTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/is_return_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_5"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textViewSelectReturnDateTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:fontFamily="@font/gotham_light"
                            android:gravity="start"
                            android:padding="@dimen/dp_5"
                            android:singleLine="true"
                            android:text="Return"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonLift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/sp_25"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/sp_25"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/rounded_button"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingRight="@dimen/dp_40"
                    android:text="@string/find_lift"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>